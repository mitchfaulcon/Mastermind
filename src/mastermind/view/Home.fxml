<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onKeyReleased="#keyReleased" prefHeight="500.0" prefWidth="750.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mastermind.controller.HomeController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="751.0" opacity="0.3" pickOnBounds="true">
         <image>
            <Image url="@../resources/HomeBackground.jpg" />
         </image></ImageView>
      <JFXButton fx:id="newGameButton" buttonType="RAISED" layoutX="75.0" layoutY="400.0" onAction="#onClick" prefHeight="45.0" prefWidth="150.0" ripplerFill="SKYBLUE" style="-fx-background-color: #328cc1; -fx-background-radius: 0;" text="New Game" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="leaderboardButton" buttonType="RAISED" layoutX="300.0" layoutY="400.0" onAction="#onClick" prefHeight="45.0" prefWidth="150.0" ripplerFill="#97ffce" style="-fx-background-color: #31bf7e; -fx-background-radius: 0;" text="Leaderboard" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="quitButton" buttonType="RAISED" layoutX="525.0" layoutY="400.0" onAction="#onClick" prefHeight="45.0" prefWidth="150.0" ripplerFill="#ff8b8b" style="-fx-background-color: #c12f2f; -fx-background-radius: 0;" text="Quit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
   </children>
</AnchorPane>
